<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context=".poster_item.PosterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainview_img_poster"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />



        <ImageButton
            android:id="@+id/ib_excited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/mainview_btn_excited_selected"
            app:layout_constraintBottom_toBottomOf="@+id/ib_tense"
            app:layout_constraintStart_toEndOf="@+id/ib_tense"
            app:layout_constraintTop_toTopOf="@+id/ib_tense"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/ib_tense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/mainview_btn_tense_selected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_poster" />

        <ImageButton
            android:id="@+id/ib_multicastinng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/mainview_btn_multicasting"
            app:layout_constraintBottom_toBottomOf="@+id/ib_trilling"
            app:layout_constraintStart_toEndOf="@+id/ib_trilling"
            app:layout_constraintTop_toTopOf="@+id/ib_trilling"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/ib_trilling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/mainview_btn_trilling"
            app:layout_constraintBottom_toBottomOf="@+id/ib_excited"
            app:layout_constraintStart_toEndOf="@+id/ib_excited"
            app:layout_constraintTop_toTopOf="@+id/ib_excited"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/ib_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/mainview_icon_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ib_main_play"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/ib_main_play"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/mainview_btn_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/ib_main_information"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/mainview_icon_information"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ib_main_play" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</FrameLayout>